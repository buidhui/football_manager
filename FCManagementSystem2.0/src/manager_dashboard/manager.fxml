                                    <Insets />
                                 </opaqueInsets>
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="10.0" right="10.0" />
                                 </VBox.margin></TextField>
                              <TextField fx:id="weight" layoutX="10.0" layoutY="171.0" prefHeight="25.0" prefWidth="287.0" promptText="Weight">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="10.0" right="10.0" />
                                 </VBox.margin></TextField>
                              <TextField fx:id="nationality" layoutX="10.0" layoutY="171.0" prefHeight="25.0" prefWidth="287.0" promptText="Nationality">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="10.0" right="10.0" />
                                 </VBox.margin></TextField>
                              <TextField fx:id="appearance" layoutX="10.0" layoutY="171.0" prefHeight="25.0" prefWidth="287.0" promptText="Appearance">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="10.0" right="10.0" />
                                 </VBox.margin></TextField>
                                        <Button mnemonicParsing="false" onAction="#addPlayer" prefHeight="39.0" prefWidth="297.0" text="Add Entry">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </Button>
                                        <Button mnemonicParsing="false" onAction="#clearFields" prefHeight="39.0" prefWidth="297.0" text="Clear Form">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </Button>
                                        <Button mnemonicParsing="false" onAction="#loadPlayerData" prefHeight="39.0" prefWidth="294.0" text="Load Data">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </Button>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
