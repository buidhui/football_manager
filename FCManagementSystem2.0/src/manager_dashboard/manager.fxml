    <children>
        <TabPane prefHeight="720.0" prefWidth="1200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Players">
                    <content>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <HBox layoutX="185.0" prefHeight="670.0" prefWidth="1010.0">
                                    <children>
                                        <TableView fx:id="playertable" prefHeight="670.0" prefWidth="1060.0">
                                            <columns>
                                                <TableColumn fx:id="idcolumn" prefWidth="32.0" text="No" />
                                                <TableColumn fx:id="namecolumn" prefWidth="103.0" text="Name" />
                                                <TableColumn fx:id="positioncolumn" prefWidth="76.0" text="Position" />
                                                <TableColumn fx:id="agecolumn" prefWidth="49.0" text="Age" />
                                                <TableColumn fx:id="heightcolumn" prefWidth="86.0" text="Height" />
                                    <TableColumn fx:id="weightcolumn" prefWidth="86.0" text="Weight" />
                                    <TableColumn fx:id="nationalitycolumn" prefWidth="86.0" text="Nationality" />
                                    <TableColumn fx:id="appearancecolumn" prefWidth="86.0" text="Appearance" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </HBox>
                                <VBox layoutX="7.0" layoutY="-1.0" prefHeight="674.0" prefWidth="171.0">
