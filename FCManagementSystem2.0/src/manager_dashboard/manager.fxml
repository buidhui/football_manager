                                        <Label prefHeight="41.0" prefWidth="303.0" text="Add Player">
                                            <padding>
                                                <Insets left="50.0" />
                                            </padding>
                                        </Label>
                                        <TextField fx:id="id" prefHeight="25.0" prefWidth="150.0" promptText="ID">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </TextField>
                                        <TextField fx:id="name" promptText="Name">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </TextField>
                                        <TextField fx:id="position" promptText="Position">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </TextField>
                                        <TextField fx:id="age" prefHeight="25.0" prefWidth="205.0" promptText="Age">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </TextField>
                              <TextField fx:id="height" layoutX="20.0" layoutY="141.0" prefHeight="25.0" prefWidth="287.0" promptText="Height">
