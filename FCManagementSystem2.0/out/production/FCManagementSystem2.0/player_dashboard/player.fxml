<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="player_dashboard.PlayerController">
    <children>
        <TabPane prefHeight="720.0" prefWidth="1200.0" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Players">
                    <content>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <HBox layoutX="309.0" prefHeight="670.0" prefWidth="886.0">
                                    <children>
                                        <TableView fx:id="playertable" prefHeight="670.0" prefWidth="917.0">
                                            <columns>
                                                <TableColumn fx:id="idcolumn" prefWidth="75.0" text="ID" />
                                                <TableColumn fx:id="firstnamecolumn" prefWidth="153.0" text="First name" />
                                                <TableColumn fx:id="lastnamecolumn" prefWidth="152.0" text="Last name" />
                                                <TableColumn fx:id="emailcolumn" prefWidth="339.0" text="Email" />
                                                <TableColumn fx:id="dobcolumn" prefWidth="166.0" text="DOB" />
                                            </columns>
                                        </TableView>
                                    </children>
                                </HBox>
                                <VBox layoutX="7.0" layoutY="-1.0" prefHeight="674.0" prefWidth="303.0">
                                    <children>
                                        
                                        <Button mnemonicParsing="false" onAction="#loadPlayerData" prefHeight="39.0" prefWidth="294.0" text="Load Data">
                                            <VBox.margin>
                                                <Insets bottom="5.0" left="10.0" right="10.0" />
                                            </VBox.margin>
                                        </Button>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
